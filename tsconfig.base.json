{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["dom", "es2019", "es2020", "es2021", "esnext"],
    "target": "es2019",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "paths": {
      "@jsheroes/angular": ["packages/jsheroes-angular/src/index.ts"],
      "@jsheroes/core": ["dist/packages/jsheroes"],
      "@jsheroes/core/*": ["dist/packages/jsheroes/*"],
      "@jsheroes/react": ["packages/jsheroes-react/src/index.ts"]
    }
  },
  "include": ["./tailwind.config.ts"],
  "exclude": ["./node_modules", "./tmp"]
}
